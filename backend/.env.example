# MongoDB connection string
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Database name
DB_NAME=mapmoments_db

# JWT Secret (generate a secure random value)
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM

# Frontend origins (comma-separated for CORS)
FRONTEND_ORIGINS=http://localhost:3000,https://mapmoments.vercel.app

# Cookie security (set to true in production with HTTPS)
COOKIE_SECURE=true

# Port (optional, defaults to 8000)
PORT=8000
